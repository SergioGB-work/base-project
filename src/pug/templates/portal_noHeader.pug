-var api="http://smartretail-api.ttcloud.net:3000/api"

doctype
html
	head
		link(href="css/main.min.css",rel="stylesheet")
		link(href="css/components.min.css",rel="stylesheet")
		link(href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,700",rel="stylesheet")
		meta(charset="utf-8")
		meta(name="viewport",content="width=device-width, initial-scale=1.0")
		link(rel="shortcut icon",href="favicon.ico")
		script(src="js/priority.min.js",type="text/javascript")

		block head

	body

		include component.pug
		block language

		div(id="wrapper")

			section(id="content")
				block content

		div#loading-mask
		include error.pug	
		script(src="js/main.min.js",type="text/javascript")
		script(src="js/components.min.js",type="text/javascript")