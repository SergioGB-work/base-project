mixin component-breadcrumbs(content)

	- var pages = content;
	- var length = content.length - 1
	
	nav(id="breadcrumbs")
		ol(class="breadcrumb nomargin")
		
			each item,i in content
				li.breadcrumb-item
					if i == length
						a(href=item.url, class="active") #{item.pageName}
					else
						a(href=item.url) #{item.pageName}
				
							