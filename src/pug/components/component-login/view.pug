mixin component-login(content)
			
	p ${{ login.description }}$

	form(role="form",data-callback="callbackLogin",data-method="POST",data-action="https://services.demoretailsolutions.com:3000/api/v1/usuarios/login")
		div(class="form-group")
			label(for="email",class="sr-only") ${{ login.email }}$
			input(type="email",name="email",id="email",placeholder="${{ login.email }}$",class="form-control",required)

		div(class="form-group")
			label(for="password",class="sr-only") ${{ login.password }}$
			input(type="password",name="password",id="password",placeholder="${{ login.password }}$",class="form-control",required)

		div(class="form-group text-center-xs nomargin")
			button(type="submit",class="btn btn-primary") ${{ login.signin }}$
			a(href="./olvide-contrasena.html",title="",class="btn btn-link") ${{ login.forgotPass }}$