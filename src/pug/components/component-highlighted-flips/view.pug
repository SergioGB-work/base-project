mixin component-highlighted-flips(content)
	.container
		.row.flex-center-center
			each item,i in content

				- var iconType = item.iconType

				.col-lg-3.col-md-3.col-sm-4.col-xs-6.text-center
					.image
						.icon
							if iconType=='material'
								i(class=item.iconSize + ' material-icons flex-center-center') !{item.iconCode}
						
							else if iconType=='fontawesome'	
								span(aria-hidden="true",class=item.iconSize + ' fa flex-center-center ' +  item.iconCode)
							
							else if iconType=='glyphicon'
								span(aria-hidden="true",class=item.iconSize + ' glyphicon flex-center-center ' +  item.iconCode)

					.info
						h3.nomargin #{item.header}
						p #{item.content}


