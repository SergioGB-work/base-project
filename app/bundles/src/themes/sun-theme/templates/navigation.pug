nav(class="navbar navbar-expand-xl navbar-dark p-0 p-3-xl",role="navigation")

	div(class="navbar-header")
		button(type="button",class="navbar-toggler collapsed",data-toggle="collapse",data-target="#navigation-list",aria-expanded="false")
			span.navbar-toggler-icon

	div(class="collapse navbar-collapse",id="navigation-list", aria-expanded="false")

		ul(class="navbar-nav bd-navbar-nav",data-load="true",data-service-data=apiLocal +siteURL + "/data/sitemap.json",data-method="GET",data-template="#templateNavigation",data-target="#navigation-list ul")


	script(id="templateNavigation",type="text/x-jquery-tmpl")
		| {%if data.pages.length > 0 %}
		| {%each data.pages%}

		| {%if $value.childs.length > 0 %}
		li.nav-item.dropdown
			a(href=fullSiteUrl + "${$value.url}", title="${{ default.goTo }}$ ${$value.name}", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false", id="${$value.id}", class="nav-link dropdown-toggle d-flex d-flex align-items-center")
				span ${$value.name}

			ul(class="dropdown-menu",aria-labelledby="${$value.id}")
				| {%each(i, child) $value.childs %}
				li.dropdown-item
					a(href=fullSiteUrl + "${child.url}", title="${{ default.goTo }}$ ${child.name}") ${child.name}
				| {%/each%}

		| {%else%}
		li.nav-item
			a(href=fullSiteUrl + "${$value.url}", class="nav-link d-flex d-flex align-items-center", title="${{ default.goTo }}$ ${$value.name}")
				span ${$value.name}
		| {%/if%}

		| {%/each%}
		| {%/if%}