extends ./modal_noHeaderNoFooter

block vars
	- var modal_title = ""
	- var modal_id = "modal-error"
block modal-body
	.error
		h2 ${{ #{siteName}.error }}$
		p ${{ #{siteName}.errorOcurred }}$
		div(class="customContent")

		.row
			.col-xs-12
				.text-right
					button(class="btn btn-primary",data-dismiss="modal") ${{ #{siteName}.acept }}$