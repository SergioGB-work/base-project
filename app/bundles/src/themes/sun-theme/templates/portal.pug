include variables.pug
include generate-attributes.pug
include layouts.pug

doctype
html(lang="${{ default.lang }}$")
	head
		+generate-attributes(attributes)
		meta(charset="utf-8")
		meta(name="viewport",content="width=device-width, initial-scale=1.0")
		link(rel="preconnect" href=apiDevelopment)
		link(rel="shortcut icon",href="favicon.ico")
		link(href=fullSiteUrl + "/css/main.min.css",rel="stylesheet",media="all")

		if locals.development == true
			script(src=fullSiteUrl + "/javascript/priority.js",type="text/javascript")
		else
			script(src=fullSiteUrl + "/javascript/priority.min.js",type="text/javascript")
				
		block head

	body(data-page-id=id, data-site-id = siteName)

		include fragment.pug
		include component.pug
		include ../../content_manager/include_contents.pug

		div(id="wrapper")

			header(id="header")
				include header.pug

			section(id="content")
				+#{layout.name}(layout.content)

			footer(id="footer")
				include footer.pug					

		div#loading-mask
		include error.pug
		include development-tools/development-tools.pug
		include options-template.pug
		link(href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,700",rel="stylesheet",media="all",async)
		link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet",media="all", async)
		link(href=fullSiteUrl + "/css/components.min.css",rel="stylesheet",media="all",async)

		if locals.development == true
			script(src=fullSiteUrl + "/javascript/main.js",type="text/javascript")
			script(src=fullSiteUrl + "/javascript/components.js",type="text/javascript",async)
			script(src=fullSiteUrl + "/javascript/develop.js",type="text/javascript")
		else
			script(src=fullSiteUrl + "/javascript/main.min.js",type="text/javascript")
			script(src=fullSiteUrl + "/javascript/components.min.js",type="text/javascript",async)