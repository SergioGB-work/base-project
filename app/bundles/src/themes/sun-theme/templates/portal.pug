include variables.pug
include generate-attributes.pug
include layouts.pug

doctype
html
	head
		+generate-attributes(attributes)
		meta(charset="utf-8")
		meta(name="viewport",content="width=device-width, initial-scale=1.0")
		link(href=fullSiteUrl + "/css/main.min.css",rel="stylesheet",media="all")
		link(href=fullSiteUrl + "/css/components.min.css",rel="stylesheet",media="all")
		link(rel="shortcut icon",href="favicon.ico")
		script(src=fullSiteUrl + "/javascript/priority.min.js",type="text/javascript")

		block head

	body(data-page-id=id)

		include fragment.pug
		include component.pug

		div(id="wrapper")

			header(id="header")
				include header.pug

			section(id="content")
				+#{layout.name}(layout.content)

			footer(id="footer")
				include footer.pug					

		div#loading-mask
		include error.pug
		include development-tools/development-tools.pug


		link(href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,700",rel="stylesheet",media="all")
		link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet",media="all")
		script(src=fullSiteUrl + "/javascript/main.min.js",type="text/javascript")
		script(src=fullSiteUrl + "/javascript/components.min.js",type="text/javascript")
		script(src=fullSiteUrl + "/javascript/develop.min.js",type="text/javascript")