extends ../modal_noHeaderNoFooter

block vars
	- var modal_id = "modal-content-delete"
	- var modal_size = "modal-sm"

block modal-body
	form(data-toggle="validator",role="form",data-method="POST",data-action=apiDevelopment + "/site/{idSite}/content/delete", data-callback="deleteContentCallback")
		.row
			.col-12
				p ¿Estás seguro que deseas eliminar este contenido?
				+fragment('fragment-input',{"type":"hidden", "name":"id", "required":"required"})
				+fragment('fragment-input',{"type":"hidden", "name":"contentType", "required":"required"})
		.row
			div(class="form-group col-12 d-flex justify-content-end mb-0")
				button(type="submit",class="btn btn-primary send") Eliminar