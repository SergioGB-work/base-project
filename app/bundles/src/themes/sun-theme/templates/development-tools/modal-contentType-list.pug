extends ../modal_noFooter

block vars
	- var modal_title = "Tipos de  contenido"
	- var modal_id = "modal-contentType-list"
	- var modal_size = "modal-full"

block modal-body

	div(id="contentTypeList",data-service-data=apiDevelopment + "/site/{idSite}/content/contentTypes",data-method="GET",data-template="#templateContentTypeList",data-target="#modal-contentType-list #contentTypeList")

	
	script(id="templateContentTypeList",type="text/x-jsrender")

		| {{if data.length > 0}}
		.row
			| {{for data}}
			.col-12.col-sm-4.col-md-3.col-lg-2
				.card
					.card-img-top
						div.actions.position-absolute.px-2.py-1.w-100.text-right.icon-3x
							a.action.text-secondary(data-content-type='{{:value}}', data-toggle='modal', data-target='#modal-contentType-edit', data-dismiss='modal')
								i(class="fa fa-edit")
									span.sr-only Editar tipo de contenido
							a.action.text-secondary.ml-2(href="", data-content-type='{{:value}}', data-toggle='modal', data-target='#modal-contentType-delete', data-dismiss='modal')
								i(class="fa fa-times")
									span.sr-only Eliminar tipo de contenido		
						img(src=fullSiteUrl +"/images/default-img.png",alt='Image-Content-{{:name}}')
					.card-body
						if(header != '')
							h3.card-title.icon-2x {{:label}}

			| {{/for}}

		| {{else}}
		.row
			.alert.alert-info.text-center.col-12.col-sm-8.offset-sm-2 Todav√≠a no existen tipos de contenido

		| {{/if}}

		.row
			div(class="form-group col-12 d-flex justify-content-end mb-0")

				button(class="btn btn-primary mr-3", data-toggle="modal", data-target="#modal-contentType-add", data-dismiss="modal") Nuevo