mixin component-form-filter(content)

	- var items = content.items
	- var formFilter = content.formFilter || false
	- var action = content.action || false
	- var method = content.method || false
	- var callback = content.callback || false
	- var rel = content.rel || false
	- var noReload = content.noReload || false
	- var submitButton = content.submitButton || 'Aceptar'

	form(role="form", data-form-filter=formFilter, data-action=action, data-method=method, data-callback=callback, data-rel=rel, data-noreload=noReload)
		.row
			each item in items

				- var randomID = Math.floor(Math.random() * (15 - 1300) + 1300)
				- var customControls = item.type=='checkbox' || item.type=='radio' ? 'custom-control custom-' + item.type : ''
				- var required = item.required == 'true' ? true : false
				- var placeholder = item.placeholder != '' ? item.placeholder : false
				- var regExp = item.regExp != '' ? item.regExp  : false
				- var event = item.event != '' ? item.event  : false
				- var eventTarget = item.eventTarget != '' ? item.eventTarget  : false
				- var eventValue = item.eventValue != '' ? item.eventValue  : false
				- var eventAction = item.eventAction != '' ? item.eventAction  : false
				- var service = item.dataService != '' ? item.dataService : false
				- var template = item.dataTemplate != '' ? item.dataTemplate : false
				- var method = item.dataMethod != '' ? item.dataMethod : false
				- var parent = item.dataParent != '' ? item.dataParent  : false			
				- var parentEvent = item.dataParentEvent != '' ? item.dataParentEvent  : false			
				- var parentEventValue = item.dataParentEventValue != '' ? item.dataParentEventValue  : false			
				- var parentEventAction = item.dataParentEventAction != '' ? item.dataParentEventAction  : false	
				- var load = item.dataService != '' && item.dataParent == '' ? 'true' : false		

				.form-group(class=item.size)

					if item.type=='textarea'
						label(for="input"+randomID)
							| #{item.label} 
							if item.helpText != ''
								i(class="fa fa-question-circle text-primary",data-toggle="tooltip" data-placement="right" title=item.helpText)
						textarea(class="form-control", id="input" + randomID, name=item.name, required=required, placeholder=placeholder, data-get-default-value=item.name) #{item.value}

					else if item.type=='checkbox' || item.type=='radio'
						div(class=customControls)
							input(class="custom-control-input", type=item.type, id="input" + randomID, name=item.name, required=required, value=item.value,data-get-default-value=item.name)
							label(for="input"+randomID, class="custom-control-label")
								| #{item.label} 
								if item.helpText != ''
									i(class="fa fa-question-circle text-primary",data-toggle="tooltip" data-placement="right" title=item.helpText)

					else if item.type=='select'
						label(for="input"+randomID)
							| #{item.label} 
							if item.helpText != ''
								i(class="fa fa-question-circle text-primary",data-toggle="tooltip" data-placement="right" title=item.helpText)
						select(class="form-control", id="input" + randomID, name=item.name, required=required, data-get-default-value=item.name, data-event=event, data-event-target=eventTarget, data-event-value=eventValue, data-event-action=eventAction, data-service-data=service, data-method=method, data-template=template, data-target="#input" + randomID, data-load=load, data-parent=parent, data-parent-event=parentEvent, data-parent-event-value=parentEventValue, data-parent-event-action=parentEventAction)
							if item.selectValues !== undefined && !service
								each option in item.selectValues
									option(value=option.value) #{option.text}

					else if item.type=='separator'
						h3.mb-0 #{item.label}

					else	
						label(for="input"+randomID)
							| #{item.label} 
							if item.helpText != ''
								i(class="fa fa-question-circle text-primary",data-toggle="tooltip" data-placement="right" title=item.helpText)
						input(class="form-control", type=item.type, id="input" + randomID, name=item.name, required=required, value=item.value, placeholder=placeholder, pattern=regExp, data-get-default-value=item.name)

		.row
			.form-group.col-12.mb-0
				button(class="btn btn-primary", type="submit") #{submitButton}
